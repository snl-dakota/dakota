#@ p0: MPIProcs=2
#@ p1: MPIProcs=3
#@ s*: TimeoutAbsolute=3600
#@ s*: TimeoutDelay=1200

#environment,

method,
	model_pointer = 'HIERARCH'
        multilevel_multifidelity_sampling
	  solution_mode  online_pilot		#s0,#s1,#s2,#s3,#s4,#s9,#s10,#s11
#	    relaxation factor_sequence = .5 .75 1.	#s9
#	  solution_mode  online_projection 	#s5
#	  solution_mode offline_pilot		#s6
#	  solution_mode offline_projection	#s8
	  pilot_samples = 20  seed = 1237	#s0,#s1,#s2,#s3,#s5,#s7,#s9,#s10,#s11,#p0,#p1
#	  pilot_samples = 100 50 40 20		#s4
#	  seed_sequence = 1234 2345 3456 4567	#s4
#	  pilot_samples = 500 seed = 1237	#s6,#s8
#	  max_iterations = 0
#	  convergence_tolerance = .1			
	  convergence_tolerance = .01		#s0,#s2,#s3,#p0,#p1
#	  convergence_tolerance = .001		#s1,#s4,#s7,#s8,#s9,#s10,#s11
#	  convergence_tolerance = .0001
#	  max_function_evaluations = 50		#s5,#s6
	output silent

model,
	id_model = 'HIERARCH'
	variables_pointer = 'HF_VARS'
	surrogate ensemble
	  ordered_model_fidelities = 'LF' 'HF'

model,
	id_model = 'LF'
	variables_pointer = 'LF_VARS'
	simulation
	  solution_level_control = 'N_x'		 #s0,#s1,#s3,#s4,#s5,#s6,#s7,#s8,#s9,#s10,#s11,#p0,#p1
# linear in modes, linear in spatial coords:
#	  solution_level_cost = 15. 45. 90. 180.
# linear in modes, cubic in spatial coords:
	  solution_level_cost = 375. 10125. 81000. 648000.   #s0,#s1,#s3,#s4,#s5,#s6,#s8,#s9,#s11,#p0,#p1
#	  solution_level_cost = 375. 	    	   	     #s2
#	  cost_recovery_metadata = 'cost_model'		     #s7,#s10

model,
	id_model = 'HF'
	variables_pointer = 'HF_VARS'
	simulation
	  solution_level_control = 'N_x'		 #s0,#s1,#s2,#s4,#s5,#s6,#s7,#s8,#s9,#s10,#s11,#p0,#p1
# linear in modes, linear in spatial coords:
#	  solution_level_cost = 630. 1260. 2100. 4200.
# linear in modes, cubic in spatial coords:
	  solution_level_cost = 5.67e+5 4.536e+6 2.1e+7 1.68e+8	#s0,#s1,#s2,#s4,#s5,#s6,#s8,#s9,#s10,#p0,#p1
#	  solution_level_cost = 5.67e+5			   	#s3
#	  cost_recovery_metadata = 'cost_model'			#s7,#s11

variables,
	id_variables = 'LF_VARS'
	uniform_uncertain = 7
	  lower_bounds    = 7*-1.
	  upper_bounds    = 7* 1.
	discrete_state_set
	  integer = 2
	    num_set_values = 4 1
	    set_values = 5 15 30 60 # number of spatial coords
	    	       	 3 	    # number of Fourier solution modes
	    initial_state = 5 3
	    descriptors 'N_x' 'N_mod'

variables,
	id_variables = 'HF_VARS'
	uniform_uncertain = 7
	  lower_bounds    = 7*-1.
	  upper_bounds    = 7* 1.
	discrete_state_set
	  integer = 2
	    num_set_values = 4 1
	    set_values = 30 60 100 200 # number of spatial coords
	    	       	 21 	       # number of Fourier solution modes
	    initial_state = 30 21
	    descriptors 'N_x' 'N_mod'

interface,
	direct
	  analysis_driver = 'transient_diffusion_1d'
	  deactivate evaluation_cache restart_file

responses,
	response_functions = 1
	no_gradients
	no_hessians
	metadata 'cost_model'
