#@ s*: Label=FastTest
#@ *: DakotaConfig=HAVE_NPSOL
environment,
#	graphics
	method_pointer = 'SBLO'

method,
	id_method = 'SBLO'
	surrogate_based_local
	model_pointer = 'OPTIM_M'
	  approx_method_pointer = 'OPTIM'
	  max_iterations = 50
	  soft_convergence_limit = 2
	  trust_region
	    initial_size = 1.0
	    contraction_factor = 0.5
	    expansion_factor   = 1.50
	  output verbose

###########################
# begin opt specification #
###########################
method,
	id_method = 'OPTIM'
	npsol_sqp
	  convergence_tolerance = 1.e-6
	  output verbose

model,
	id_model = 'OPTIM_M'
	surrogate local taylor_series
	  variables_pointer = 'OPTIM_V'
	  responses_pointer = 'OPTIM_R_SURR'
	  actual_model_pointer = 'OPTIM_TRUTH'

variables,
	id_variables = 'OPTIM_V'
	continuous_design = 1
	  initial_point     = -0.75
	  lower_bounds      = -2.
	  upper_bounds      =  2.
	  descriptors       = 'x1'

responses,
# NOTE: This specifies the TOTAL RESPONSE for the optimization,
#       which is a combination of nested & interface responses.
	id_responses = 'OPTIM_R_SURR'
	objective_functions = 1
	analytic_gradients
	no_hessians

##########################
# begin TS specification #
##########################
model,
	id_model = 'OPTIM_TRUTH'
	nested
	  variables_pointer  = 'OPTIM_V'
	  sub_method_pointer = 'UQ'
	  responses_pointer  = 'OPTIM_R_TRUTH'
# maximize beta
	  primary_response_mapping   = 0. 0. -1.

responses,
# NOTE: This specifies the TOTAL RESPONSE from the nested mapping
#       used for constructing the surrogate.
	id_responses = 'OPTIM_R_TRUTH'
	objective_functions = 1
	analytic_gradients
	no_hessians				#s0,#s2
#	quasi_hessians sr1			#s1,#s3

##########################
# begin UQ specification #
##########################
method,
	id_method = 'UQ'
	model_pointer = 'UQ_M'
	stoch_collocation
	  quadrature_order = 5			#s0,#s1
#	  sparse_grid_level = 1			#s2,#s3
# Inverse mapping:
#	  reliability_levels = 3.
# Forward mapping:
	  response_levels = 10.
	  compute reliabilities

model,
	id_model = 'UQ_M'
	single
	  variables_pointer = 'UQ_V'
	  interface_pointer = 'UQ_I'
	  responses_pointer = 'UQ_R'

variables,
	id_variables = 'UQ_V'
	continuous_design = 1
	normal_uncertain = 1
      	  means             =  0.
	  std_deviations    =  1.
	  descriptors       = 'x2'

interface,
	id_interface = 'UQ_I'
	direct
	  analysis_driver = 'rosenbrock'
#	  deactivate restart_file evaluation_cache

responses,
	id_responses = 'UQ_R'
	response_functions = 1
	analytic_gradients
	no_hessians
