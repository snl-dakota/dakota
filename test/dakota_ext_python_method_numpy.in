#@ s*: Label=FastTest
#@ p*: MPIProcs=2
#@ *: DakotaConfig=HAVE_EXT_PYTHON_METHOD,DAKOTA_PYTHON_NUMPY_FOUND
#@ *: ReqFiles=ext_py_methods.py,ext_py_options.json,ext_py_helper.py

environment
    tabular_data
      tabular_data_file = 'external_python.dat'
    results_output
      hdf5
        results_output_file = 'external_python'

method,
    external_python
      class_path_and_name = "ext_py_methods.NumpyOpt"   #s0,#p0
      options_file = 'ext_py_options.json'

variables,
    continuous_design = 2
    initial_point       0.5     0.5
    upper_bounds	2.0     2.0
    lower_bounds       -2.0    -2.0
    descriptors	        'x1'    'x2'

interface,
    direct
    analysis_driver = 'text_book'

responses,
    objective_functions = 1
    no_gradients
    no_hessians

