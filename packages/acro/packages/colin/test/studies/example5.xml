<!-- 
	MINLP0 problem being passed to a MINLP solver.
	Minimize all variables.
  -->

<ColinInput>
  <Problem type="MINLP0">
     <Domain>
	<RealVars num="5"/>
	<IntegerVars num="4"/>
	<BinaryVars num="3"/>
     </Domain>
     <Driver>
        <Command>../../../../python/bin/python example_fn1</Command>
     </Driver>
  </Problem>

  <Solver type="colin:ls">
     <InitialPoint>
       b(3: 0 0 0)
       i(4: 10 10 10 10)
       r(5: 10.1 10.1 10.1 10.1 10.1)
     </InitialPoint>
     <Options>
        <Option name="sufficient_objective_value">1e-3</Option>
     </Options>
  </Solver>

  <Execute/>
</ColinInput>
